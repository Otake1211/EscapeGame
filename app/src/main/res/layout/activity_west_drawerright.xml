<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".West_drawerright">

    //背景

    <ImageView
        android:id="@+id/backimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/west_drawerright" />

    <Button
        android:id="@+id/Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="0sp"
        android:background="#00000000"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:onClick="onMain"
        android:padding="0dp"
        android:text="⚙"
        android:textColor="#000000"
        android:textSize="60sp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="20sp"
        android:layout_marginVertical="20sp"
        android:paddingTop="200sp">

        <TableRow>

            <Button
                android:id="@+id/lfplusbtn"
                android:layout_width="70sp"
                android:layout_height="60sp"
                android:layout_marginHorizontal="10sp"
                android:backgroundTint="@color/keybutton"
                android:onClick="onLfplusbtn"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/riplusbtn"
                android:layout_width="70sp"
                android:layout_height="60sp"
                android:layout_marginHorizontal="10sp"
                android:backgroundTint="@color/keybutton"
                android:onClick="onRiplusbtn"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </TableRow>


        <TableRow>

            <TextView
                android:id="@+id/lfnum"
                android:layout_width="70sp"
                android:layout_height="60sp"
                android:layout_marginHorizontal="10sp"
                android:paddingLeft="10sp"
                android:text="0"
                android:textSize="45sp"
                android:textColor="#FF4444"/>

            <TextView
                android:id="@+id/rinum"
                android:layout_width="70sp"
                android:layout_height="60sp"
                android:layout_marginHorizontal="10sp"
                android:paddingLeft="10sp"
                android:text="0"
                android:textSize="45sp"
                android:textColor="#666666"/>

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/lfminusbtn"
                android:layout_width="70sp"
                android:layout_height="60sp"
                android:layout_marginHorizontal="10sp"
                android:backgroundTint="@color/keybutton"
                android:onClick="onLfminusbtn"
                android:text="－"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/riminusbtn"
                android:layout_width="70sp"
                android:layout_height="60sp"
                android:layout_marginHorizontal="10sp"
                android:backgroundTint="@color/keybutton"
                android:onClick="onRiminusbtn"
                android:text="－"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        tools:ignore="ExtraText">


        //視点移動

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageButton
                android:id="@+id/West_drawerleft"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:contentDescription="@null"
                android:onClick="onWest"
                android:scaleType="centerInside"
                android:src="@drawable/arrowdown" />

        </RelativeLayout>


        //アイテム欄

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/border"
            android:paddingVertical="3sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/border"
                android:orientation="horizontal"
                android:paddingHorizontal="4sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80sp"
                    android:layout_marginRight="0sp"
                    android:background="@color/box"
                    android:orientation="horizontal">


                    //アイテムのボタンを配置する場所

                    <ImageButton
                        android:id="@+id/itembutton1"
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:onClick="onitem1"
                        android:scaleType="centerInside"
                        android:src="@drawable/clear" />

                    <ImageButton
                        android:id="@+id/itembutton2"
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:onClick="onitem2"
                        android:scaleType="centerInside"
                        android:src="@drawable/clear" />

                    <ImageButton
                        android:id="@+id/itembutton3"
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:onClick="onitem3"
                        android:scaleType="centerInside"
                        android:src="@drawable/clear" />

                    <ImageButton
                        android:id="@+id/itembutton4"
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:onClick="onitem4"
                        android:scaleType="centerInside"
                        android:src="@drawable/clear" />

                    <ImageButton
                        android:id="@+id/itembutton5"
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:onClick="onitem5"
                        android:scaleType="centerInside"
                        android:src="@drawable/clear" />

                    <ImageButton
                        android:id="@+id/itembutton6"
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:onClick="onitem6"
                        android:scaleType="centerInside"
                        android:src="@drawable/clear" />

                    <ImageButton
                        android:id="@+id/itembutton7"
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:onClick="onitem7"
                        android:scaleType="centerInside"
                        android:src="@drawable/clear" />

                    <ImageButton
                        android:id="@+id/itembutton8"
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:onClick="onitem8"
                        android:scaleType="centerInside"
                        android:src="@drawable/clear" />

                    <ImageButton
                        android:id="@+id/itembutton9"
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:onClick="onitem9"
                        android:scaleType="centerInside"
                        android:src="@drawable/clear" />

                    <ImageButton
                        android:id="@+id/itembutton10"
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:onClick="onitem10"
                        android:scaleType="centerInside"
                        android:src="@drawable/clear" />

                    <ImageButton
                        android:id="@+id/itembutton11"
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:onClick="onitem11"
                        android:scaleType="centerInside"
                        android:src="@drawable/clear" />

                    <ImageButton
                        android:id="@+id/itembutton12"
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:onClick="onitem12"
                        android:scaleType="centerInside"
                        android:src="@drawable/clear" />

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>


        <FrameLayout
            android:id="@+id/ad_view_container"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/adaptive_banner_ad_unit_id" />
        </FrameLayout>

    </LinearLayout>
</RelativeLayout>
